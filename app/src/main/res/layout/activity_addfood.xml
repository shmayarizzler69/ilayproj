<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.Addfood">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Spinner for selecting meal type -->

        <TextView
            android:id="@+id/tvGoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:text="הוסף ארוחה"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Spinner
            android:id="@+id/mealTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:prompt="@string/select_meal_type"
            android:spinnerMode="dropdown" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- Button to Add New Row -->
        <Button
            android:id="@+id/addRowButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Row" />

        <!-- Button to Remove Last Row -->
        <Button
            android:id="@+id/removeRowButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove Last Row" />

        <!-- Button to Print Food List -->
        <Button
            android:id="@+id/printListButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print Food List" />

        <!-- TextView to display the food list -->
        <TextView
            android:id="@+id/foodListTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Food List will be shown here"
            android:textSize="16sp" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Meal"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btnback"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="חזור" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>