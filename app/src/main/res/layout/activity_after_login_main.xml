<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AfterLoginMain">

    <Button
        android:id="@+id/btnGoAbout"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_marginBottom="356dp"
        android:background="#0F1010"
        android:text="כפתור לאפליקציה"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGotest" />

    <TextView
        android:id="@+id/tvGoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="288dp"
        android:text="מסך בית "
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btninfo"
        app:layout_constraintStart_toStartOf="@+id/btnGotest"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGotest"
        android:layout_width="173dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:text="מחשבון קלוריות"
        app:layout_constraintBottom_toTopOf="@+id/btnGoAbout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGoTitle" />

    <Button
        android:id="@+id/btninfo"
        android:layout_width="217dp"
        android:layout_height="0dp"
        android:layout_marginBottom="225dp"
        android:text="פרטי חשבון"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGoTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>