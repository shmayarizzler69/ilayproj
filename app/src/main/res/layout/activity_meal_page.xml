<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.MealPage">
    <!-- res/layout/item_calendar_day.xml -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/calendar_cell_background">

        <!-- Date -->
        <TextView
            android:id="@id/dayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Progress Bar for Calories -->
        <ProgressBar
            android:id="@id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:progress="50"
            android:max="100"
            style="@android:style/Widget.Material.HorizontalProgressBar" />

        <!-- Total Calories -->
        <TextView
            android:id="@id/calorieText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 Cal"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>